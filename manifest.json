{
    "manifest_version": 3,
    "name": "Reels Blocker",
    "description": "Prevent the infinite scrolling of instagram reels, YouTube shorts, Facebook videos/reels and TikTok.",
    "version": "1.0",
    "icons": {
        "128": "icons/128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.facebook.com/*"],
            "js": ["content_scripts/lib/jquery.js", "content_scripts/websites/selectors.js", "content_scripts/websites/facebook.js"]
        }, {
            "matches": ["*://*.instagram.com/*"],
            "js": ["content_scripts/lib/jquery.js", "content_scripts/websites/selectors.js", "content_scripts/websites/instagram.js"]
        }, {
            "matches": ["*://*.tiktok.com/*"],
            "js": ["content_scripts/lib/jquery.js", "content_scripts/websites/selectors.js", "content_scripts/websites/tiktok.js"]
        }, {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content_scripts/lib/jquery.js", "content_scripts/websites/selectors.js", "content_scripts/websites/youtube.js"]
        }
    ],
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    }
}