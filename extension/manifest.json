{
    "manifest_version": 3,
    "name": "Reels Blocker",
    "description": "Prevent the infinite scrolling of instagram reels, YouTube shorts, Facebook videos/reels and TikTok.",
    "version": "1.0",
    "icons": {
        "128": "128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.facebook.com/*"],
            "js": ["jquery.js", "facebook.js", "CSSselectors.js"]
        }, {
            "matches": ["*://*.instagram.com/*"],
            "js": ["jquery.js", "instagram.js", "CSSselectors.js"]
        }, {
            "matches": ["*://*.tiktok.com/*"],
            "js": ["jquery.js", "tiktok.js", "CSSselectors.js"]
        }, {
            "matches": ["*://*.youtube.com/*"],
            "js": ["jquery.js", "youtube.js", "CSSselectors.js"]
        }
    ],
    "permissions": [
        "unlimitedStorage",
        "notifications"
    ]
}